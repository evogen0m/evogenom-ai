{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "outDir": "dist",
  "compilerOptions": {
    "compiler": "swc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../drizzle/**/*",
        "watchAssets": true,
        "outDir": "dist/drizzle"
      },
      {
        "include": "../pem/**/*",
        "outDir": "dist/pem"
      }
    ]
  }
}
